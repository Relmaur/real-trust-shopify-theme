<div class="section-container" style="background-color: {{ section.settings.background_color }}">
  {% for block in section.blocks %}
    <div class="gallery-item">
      <img
        src="{{ block.settings.gallery_item_image | image_url: width: 150 }}"
        width="100"
        height="100"
        loading="lazy">
      <p>{{ block.settings.gallery_item_text }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Gallery",
    "tag": "div",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "label": "Add a background color",
        "default": "#3f3f3f"
      }
    ],
    "blocks": [
      {
        "type": "gallery_item",
        "name": "Gallery Item",
        "limit": 15,
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "default": "Gallery Item",
            "label": "Name"
          }, {
            "type": "image_picker",
            "id": "gallery_item_image",
            "label": "Add an image for the gallery item"
          }, {
            "type": "inline_richtext",
            "id": "gallery_item_text",
            "default": "Lorem Ipsum",
            "label": "Add text for the gallery item"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Gallery",
        "blocks": [
          {
            "type": "gallery_item"
          }, {
            "type": "gallery_item"
          }
        ]
      }
    ]
  }
{% endschema %}