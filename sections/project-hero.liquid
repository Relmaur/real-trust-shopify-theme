<div class="divsection-01 hero">
  <div class="section-container full" style="background-image: url('{{ page.metafields.custom.project_thumbnail | image_url }}')">
    <h1>{{ page.title }}</h1>
    <div class="info">
      <p>Area: {{ page.metafields.custom.area }}</p>
      <p>Location: {{ page.metafields.custom.location }}</p>
      <p>Time: {{ page.metafields.custom.time }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Hero Title",
      "default": "Project Hero Section"
    }
  ]
}
{% endschema %}
